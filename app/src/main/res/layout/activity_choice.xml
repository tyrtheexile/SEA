<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/SpaceBackground">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choice 1"
            android:id="@+id/CH1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/space"
            android:layout_toLeftOf="@+id/space" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choice 2"
            android:id="@+id/CH2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/space"
            android:layout_toRightOf="@+id/space" />

        <ScrollView
            android:id="@+id/ScrollWin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/CH1"
            android:clickable="true"
            android:layout_toRightOf="@+id/astroFrag"
            android:layout_toLeftOf="@+id/buildFrag"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/DispWin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines = "150"
                android:scrollbars = "vertical"
                android:gravity="bottom"
                android:textColor="@color/SpaceTextColor" />

        </ScrollView>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/space" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="android.app.ListFragment"
        android:id="@+id/astroFrag"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/CH1"
        android:layout_alignParentTop="true"
        class="com.example.zergd.sea.astroFrag"
        tools:layout="@layout/astro_frag" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="android.app.ListFragment"
        android:id="@+id/buildFrag"
        android:layout_alignParentTop="true"
        class="com.example.zergd.sea.baseFrag"
        android:layout_above="@+id/CH2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />
</RelativeLayout>

